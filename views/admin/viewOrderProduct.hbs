          <div class=" pb-5">


            <div class="row d-flex justify-content-center align-items-center h-100">
              <div class="col-lg-10 col-xl-8">
                <div class="card" style="border-radius: 10px;">

                  <div class="card-body p-4">
                    <div class="d-flex justify-content-between align-items-center mb-4">
                      <p class="lead fw-normal mb-0" style="color: #8a9fdc;">Receipt</p>
                      <p class="small text-muted mb-0">Receipt Voucher : {{orderDetails._id}}</p>
                    </div>

                    {{#each order}}
                    <div class="card shadow-0 border mb-4">
                      <div class="card-body">
                        <div class="row">
                          <div class="col-md-2">
                            <img src="/uploads/{{this.products.image.[0].image1}}" class="img-fluid" alt="Phone">
                          </div>
                          <div class="col-md-2 text-center d-flex justify-content-center align-items-center">
                            <p class="text-muted mb-0">{{this.products.productName}}</p>
                          </div>
                          <div class="col-md-2 text-center d-flex justify-content-center align-items-center">
                            <p class="text-muted mb-0 small">x {{this.quantity}}</p>
                          </div>

                          <div class="col-md-2 text-center d-flex justify-content-center align-items-center">
                            <p class="text-muted mb-0 small">₹{{this.products.price}}</p>
                          </div>
                          <div class="col-md-2 text-center d-flex justify-content-center align-items-center">
                            <p class="text-muted mb-0 small">status:<span
                                style="color:orangered">{{this.orderStatus}}</span></p>
                          </div>
                          <div class="col-md-2 text-center d-flex justify-content-center align-items-center">
                            <form method="post" action="/admin/changeOrderStatus">

                              <select class="form-control" id="exampleFormControlSelect1" name="orderStatus">
                                <option> Update Status</option>

                                <option>Shipped</option>
                                <option>Delivered</option>

                              </select>
                              <input type="text" name="orderId" value="{{../orderDetails._id}}" hidden>
                              <input type="text" name="proId" value="{{this.item}}" hidden>
                              <a><button type="submit" class="btn" style="background-color:rgb(231, 219, 219)"
                                  href="#">Change</button></a>

                            </form>
                          </div>


                        </div>
                        <hr class="mb-4" style="background-color: #e0e0e0; opacity: 1;">
                        <div class="row d-flex align-items-center">

                        </div>
                      </div>
                    </div>

